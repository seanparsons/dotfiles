syntax enable
set background=dark
colorscheme solarized

" Minibufexplorer key bindings.
noremap <C-A-Left>  :MBEbp<CR>:<BS>
noremap <C-A-Right> :MBEbn<CR>:<BS>

set wildignore+=*.o,*.obj,.git,*.class,project/target/**

set nobackup

vmap <C-c> "+yi
vmap <C-x> "+c
vmap <C-v> c<ESC>"+p
imap <C-v> <C-r><C-o>+

" CTRL-A is Select all
noremap <C-A> gggH<C-O>G
inoremap <C-A> <C-O>gg<C-O>gH<C-O>G
cnoremap <C-A> <C-C>gggH<C-O>G
onoremap <C-A> <C-C>gggH<C-O>G
snoremap <C-A> <C-C>gggH<C-O>G
xnoremap <C-A> <C-C>ggVG

" Better tab widths.
set expandtab
set shiftwidth=2
set softtabstop=2

" Ctrl+s to save.
map <C-s> :w<cr>
imap <C-s> <ESC>:w<cr>a

" Auto config reloading.
augroup myvimrc
    au!
    au BufWritePost .vimrc,_vimrc,vimrc,.gvimrc,_gvimrc,gvimrc so $MYVIMRC | if has('gui_running') | so $
augroup END

set number
